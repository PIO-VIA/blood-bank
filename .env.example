# Environment Configuration for Blood Bank AI System

# Application Settings
APP_NAME="DHIS2 Blood Bank Service"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/blood_bank_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=blood_bank_db
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# DHIS2 Configuration
DHIS2_BASE_URL=https://play.dhis2.org/dev
DHIS2_USERNAME=admin
DHIS2_PASSWORD=district
DHIS2_API_VERSION=40

# Authentication & Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
RATE_LIMIT_PER_MINUTE=100

# API Configuration
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8001

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=8002
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# External Services
EXTERNAL_API_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=1

# File Storage (if needed)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@bloodbank.example.com

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=30

# Docker Configuration
COMPOSE_PROJECT_NAME=blood-bank-ai

# Production URLs (for deployment)
PRODUCTION_DHIS2_URL=https://your-production-dhis2-service.com
STAGING_DHIS2_URL=https://your-staging-dhis2-service.com

# GitHub Container Registry (for CI/CD)
REGISTRY=ghcr.io
IMAGE_NAME=your-org/blood-bank-ai

# Slack Notifications (for CI/CD)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_SWAGGER_UI=true

# Performance Tuning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Localization
DEFAULT_TIMEZONE=Africa/Douala
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en

# DHIS2 Organization Units (configure based on your DHIS2 setup)
DHIS2_ORG_UNIT_BLOOD_BANK=YOUR_BLOOD_BANK_ORG_UNIT_ID
DHIS2_ORG_UNIT_COLLECTION_SITE_1=YOUR_COLLECTION_SITE_1_ORG_UNIT_ID
DHIS2_ORG_UNIT_COLLECTION_SITE_2=YOUR_COLLECTION_SITE_2_ORG_UNIT_ID

# DHIS2 Data Elements (configure based on your DHIS2 setup)
DHIS2_DE_BLOOD_TYPE=YOUR_BLOOD_TYPE_DATA_ELEMENT_ID
DHIS2_DE_VOLUME_COLLECTED=YOUR_VOLUME_DATA_ELEMENT_ID
DHIS2_DE_DONOR_AGE=YOUR_DONOR_AGE_DATA_ELEMENT_ID
DHIS2_DE_INVENTORY_COUNT=YOUR_INVENTORY_DATA_ELEMENT_ID

# DHIS2 Tracked Entity Types
DHIS2_TET_DONOR=YOUR_DONOR_TRACKED_ENTITY_TYPE_ID

# DHIS2 Attributes
DHIS2_ATTR_DONOR_ID=YOUR_DONOR_ID_ATTRIBUTE_ID
DHIS2_ATTR_DONOR_AGE=YOUR_DONOR_AGE_ATTRIBUTE_ID
DHIS2_ATTR_DONOR_GENDER=YOUR_DONOR_GENDER_ATTRIBUTE_ID